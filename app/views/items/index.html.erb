    <% @items.each do |item| %>
      <div class="product">
        <p>
          <% if item.image.exists? %>
                <%= link_to image_tag(item.image.url(:thumb)) , item_path(item) %>

          <% end %>
        </p>
        <div><%= link_to item.name, item_path(item), class: 'item_name', id: "item_#{item.id}" %></div>
