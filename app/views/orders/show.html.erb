<h1>Order #<%= @order.id %></h1>

<p>Status: <%= @order.status %></p>

<% if logged_in? && current_user.admin? %>
<%= render partial: 'admin/orders/user_details' %>
<% end %>

<p>Items:</p>
<ul>
  <% 
    @order.order_items.each do |order_item| 
      item = order_item.item
  %>
    <li>
      <%= item.name %>, 
      ordered: <%= order_item.quantity %> (per item:<%= item.price %>), 
      subtotal: <%= item.price*order_item.quantity %>
    </li>
  <% end %>
</ul>

<h3>Total: <%= @order.order_total %></h3>
<p>Order placed on: <%= @order.created_at %></p>